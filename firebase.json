{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
	"cleanUrls": true,
    "rewrites": [ {
      "source": "/echoMessage",
      "function": "echoMessage"
    } ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
